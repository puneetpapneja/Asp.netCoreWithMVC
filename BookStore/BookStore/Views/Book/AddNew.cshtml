
@{
    ViewData["Title"] = "AddNew";

}
@model BookModel

<h1>Add New Book</h1>

@if (ViewBag.isSuccess == true)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Congratulation!</strong> You have successfully added a new book. <br />Click <a asp-route="bookDetails" asp-route-id="@ViewBag.Id">here</a> to view details.
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<form method="post">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Language"></label>
        <select asp-for="Language" class="form-control" asp-items="ViewBag.language">
            <option value="">Choose Book Language</option>                       
        </select>
        <span asp-validation-for="Language" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BookName"></label>
        <input asp-for="BookName" class="form-control" />
        <span asp-validation-for="BookName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AutherName"></label>
        <input asp-for="AutherName" class="form-control" />
        <span asp-validation-for="AutherName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Add" />
    </div>
</form>

